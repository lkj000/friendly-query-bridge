{
  "name": "oko-vscode",
  "displayName": "OKO",
  "description": "The OKO extension for Visual Studion Code is designed for development teams to seamlessly access and manage critical security and quality reports from Veracode, Sonar, and Prisma directly within VS Code. This tool enhances your development workflow by providing instant visibility into your project's security and compliance metrics while ensuring that your team stays connected through a user-friendly interface.",
  "version": "0.0.1",
  "publisher": "okovanggoai",
  "repository": {
    "type": "git",
    "url": "https://github.com/okovanggoai/oko-vscode"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:oko.openSidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "oko.openSidebar",
        "title": "Open OKO Sidebar"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "oko-sidebar",
          "title": "OKO Security",
          "icon": "resources/oko-icon.svg"
        }
      ]
    },
    "views": {
      "oko-sidebar": [
        {
          "type": "webview",
          "id": "oko.securityView",
          "name": "Security Reports"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/vsce": "latest"
  },
  "license": "MIT"
}