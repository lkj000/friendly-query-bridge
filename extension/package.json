{
  "name": "oko-vscode",
  "displayName": "OKO Security Reports",
  "description": "Access security and quality reports from Veracode, Sonar, and Prisma",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:oko.openSidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "oko.openSidebar",
        "title": "Open OKO Sidebar"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "oko-sidebar",
          "title": "OKO Security",
          "icon": "resources/oko-icon.svg"
        }
      ]
    },
    "views": {
      "oko-sidebar": [
        {
          "type": "webview",
          "id": "oko.securityView",
          "name": "Security Reports"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}